{
  "name": "@daoyoucode/desktop",
  "version": "0.1.0",
  "description": "daoyoucode 桌面应用",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "tsc && vite build && electron-builder",
    "start": "electron .",
    "lint": "eslint src electron",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@daoyoucode/shared": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.daoyoucode.desktop",
    "productName": "daoyoucode",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ]
  }
}
